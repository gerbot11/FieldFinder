<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FieldFinder.App">
    <Application.Resources>
        <!--  Colors  -->
        <Color x:Key="Background">#F1F7FF</Color>
        <Color x:Key="Accent">#246DAB</Color>
        <Color x:Key="Accent2">#2F74AF</Color>
        <Color x:Key="Accent3">#1965A7</Color>
        <Color x:Key="BackgroundGradientStart">#272821</Color>
        <Color x:Key="BodyText">#797A76</Color>
        <Color x:Key="MiniIcon">#FF4A63</Color>

        <Image x:Key="BackgroundImg" Source="bg1.png"></Image>

        <!--  Styles  -->
        <Style x:Key="OnboardingHeader" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="FontSize" Value="32" />
        </Style>

        <Style x:Key="OnboardingContent" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="FontFamily" Value="SemiBoldFont" />
            <Setter Property="Margin" Value="20,0" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="SubHeader" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="SemiBoldFont" />
            <Setter Property="FontSize" Value="8" />
        </Style>

        <Style x:Key="PageHeader" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="SemiBoldFont" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style x:Key="PageSubHeader" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="FontFamily" Value="SemiBoldFont" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="SemiBoldFont" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style x:Key="SectionDetail" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}" />
            <Setter Property="FontFamily" Value="SemiBoldFont" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Application.Resources>
</Application>